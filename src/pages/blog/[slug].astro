---
/* eslint-disable indent */
import '../../styles/global.css';
import { marked } from 'marked';
import Header from '../../components/Header.astro';
import getAllBlogs from '../../utils/blog.ts';

// eslint-disable-next-line import/prefer-default-export
export async function getStaticPaths() {
  const blogs = getAllBlogs();
  return blogs.map((blog) => ({
    params: { slug: blog.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props;

// Convert markdown to HTML
const htmlContent = blog.content ? marked(blog.content) : '';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{blog.title} - ALIFE Blog</title>
    <meta name="description" content={blog.description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
      /* Noise effect */
      .noise-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
        opacity: 0.15;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        animation: noise 0.2s infinite;
        mix-blend-mode: overlay;
      }
      
      @keyframes noise {
        0%, 100% { transform: translate(0, 0); }
        10% { transform: translate(-5%, -5%); }
        20% { transform: translate(-10%, 5%); }
        30% { transform: translate(5%, -10%); }
        40% { transform: translate(-5%, 15%); }
        50% { transform: translate(-10%, 5%); }
        60% { transform: translate(15%, 0%); }
        70% { transform: translate(0%, 15%); }
        80% { transform: translate(-15%, 10%); }
        90% { transform: translate(10%, 5%); }
      }
    /* Slide-in animation styles */
    .slide-in-right {
      transform: translateX(100%);
      opacity: 0;
      transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.6s ease-out;
    }

    .slide-in-right.animate {
      transform: translateX(0);
      opacity: 1;
    }

    /* Staggered animation for child elements */
    .slide-in-right .blog-header,
    .slide-in-right .blog-content,
    .slide-in-right .blog-footer {
      transform: translateX(50px);
      opacity: 0;
      transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.5s ease-out;
    }

    .slide-in-right.animate .blog-header {
      transition-delay: 0.1s;
    }

    .slide-in-right.animate .blog-content {
      transition-delay: 0.2s;
    }

    .slide-in-right.animate .blog-footer {
      transition-delay: 0.3s;
    }

    .slide-in-right.animate .blog-header,
    .slide-in-right.animate .blog-content,
    .slide-in-right.animate .blog-footer {
      transform: translateX(0);
      opacity: 1;
    }
    </style>
  </head>

  <body class="min-h-screen bg-gray-50">
    <!-- Noise overlay -->
    <div class="noise-overlay"></div>
    
    <Header />

    <main id="blog-content" class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12 lg:py-16 slide-in-right" style="font-family: 'Inter', sans-serif;">
      <!-- Breadcrumb -->
      <nav class="mb-6 sm:mb-8">
        <a href={`${import.meta.env.BASE_URL}blog`} id="back-to-blog-btn" class="inline-flex items-center text-primary hover:text-primary/80 transition-colors duration-200 text-sm">
          <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Blog
        </a>
      </nav>

      <!-- Article Header -->
      <header class="mb-8 sm:mb-12 blog-header">
        <!-- Category -->
        <div class="mb-4">
          <span class="inline-block text-sm text-primary bg-primary/10 px-3 py-1 rounded-full font-medium">
            {blog.category}
          </span>
        </div>

        <!-- Title -->
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-medium text-primary mb-6 leading-tight" style="font-family: 'GT Alpina Fine', serif;">
          {blog.title}
        </h1>

        <!-- Meta Information -->
        <div class="flex flex-col sm:flex-row sm:flex-wrap items-start sm:items-center gap-3 sm:gap-6 text-sm text-primary mb-8">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>{blog.author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="break-words">{new Date(blog.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>5 min read</span>
          </div>
        </div>

        <!-- Excerpt -->
        <div class="text-lg sm:text-xl text-primary leading-relaxed mb-8 font-light">
          {blog.description}
        </div>

        <!-- Tags -->
        {blog.tags && blog.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-8">
            {blog.tags.map(tag => (
              <span class="text-sm text-primary bg-primary/10 px-3 py-1 rounded-full hover:bg-primary/20 transition-colors duration-200">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Featured Image -->
      <div class="mb-8 sm:mb-12">
        <img 
          src={`${import.meta.env.BASE_URL}assets/images/image.png`}
          loading="lazy" 
          alt={blog.title}
          class="w-full aspect-square sm:aspect-video lg:aspect-square object-cover rounded-lg"
        />
      </div>

      <!-- Article Content -->
      <article class="prose prose-sm sm:prose-base lg:prose-lg max-w-none blog-content text-primary">
        <div set:html={htmlContent}></div>
      </article>

      <!-- Article Footer -->
      <footer class="mt-12 sm:mt-16 pt-6 sm:pt-8 border-t border-gray-200 blog-footer">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 sm:gap-0">
          <div class="flex items-center gap-3 sm:gap-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-primary/10 rounded-full flex items-center justify-center flex-shrink-0">
              <span class="text-primary font-semibold text-sm sm:text-lg">
                {blog.author.split(' ').map(n => n[0]).join('')}
              </span>
            </div>
            <div>
              <p class="font-semibold text-primary text-sm sm:text-base">{blog.author}</p>
              <p class="text-xs sm:text-sm text-primary">{blog.category} Expert</p>
            </div>
          </div>
          <a href={`${import.meta.env.BASE_URL}blog`} class="inline-flex items-center text-primary hover:text-primary/80 transition-colors duration-200 text-sm sm:text-base">
            <span class="mr-2">Back to Blog</span>
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </footer>
    </main>

    <style>
      .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
        font-family: 'GT Alpina Fine', serif;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
      }
      
      .prose h1 {
        font-size: 1.75rem;
        font-weight: 700;
      }
      
      .prose h2 {
        font-size: 1.5rem;
        font-weight: 600;
      }
      
      .prose h3 {
        font-size: 1.25rem;
        font-weight: 600;
      }
      
      /* Responsive typography for larger screens */
      @media (min-width: 640px) {
        .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
          margin-top: 2rem;
          margin-bottom: 1rem;
        }
        
        .prose h1 {
          font-size: 2.5rem;
        }
        
        .prose h2 {
          font-size: 2rem;
        }
        
        .prose h3 {
          font-size: 1.5rem;
        }
      }
      
      .prose p {
        line-height: 1.6;
        margin-bottom: 1rem;
      }
      
      .prose ul, .prose ol {
        margin-bottom: 1rem;
      }
      
      .prose li {
        margin-bottom: 0.25rem;
      }
      
      /* Responsive prose spacing for larger screens */
      @media (min-width: 640px) {
        .prose p {
          line-height: 1.7;
          margin-bottom: 1.5rem;
        }
        
        .prose ul, .prose ol {
          margin-bottom: 1.5rem;
        }
        
        .prose li {
          margin-bottom: 0.5rem;
        }
      }
      
      .prose code {
        background-color: #f3f4f6;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.8rem;
        word-break: break-word;
      }
      
      .prose pre {
        background-color: #1f2937;
        color: #f9fafb;
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-bottom: 1rem;
        font-size: 0.8rem;
      }
      
      /* Responsive code styling for larger screens */
      @media (min-width: 640px) {
        .prose code {
          padding: 0.2rem 0.4rem;
          font-size: 0.875rem;
        }
        
        .prose pre {
          padding: 1.5rem;
          margin-bottom: 1.5rem;
          font-size: 0.875rem;
        }
      }
      
      .prose pre code {
        background-color: transparent;
        padding: 0;
        color: inherit;
      }
      
      .prose blockquote {
        border-left: 3px solid #2E3192;
        padding-left: 1rem;
        margin: 1rem 0;
        font-style: italic;
        font-size: 0.9rem;
      }
      
      /* Responsive blockquote styling for larger screens */
      @media (min-width: 640px) {
        .prose blockquote {
          border-left: 4px solid #2E3192;
          padding-left: 1.5rem;
          margin: 1.5rem 0;
          font-size: inherit;
        }
      }
      
      .prose a {
        text-decoration: none;
      }
      
      .prose a:hover {
        text-decoration: underline;
      }
    </style>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const blogContent = document.getElementById('blog-content');
        const backToBlogBtn = document.getElementById('back-to-blog-btn');
        
        if (blogContent) {
          // Check if this is a back navigation
          const isBackNavigation = sessionStorage.getItem('alife-back-navigation') === 'true';
          
          if (isBackNavigation) {
            // Skip animation for back navigation
            blogContent.classList.add('animate');
            sessionStorage.removeItem('alife-back-navigation');
          } else {
            // Trigger slide-in animation for fresh navigation
            setTimeout(() => {
              blogContent.classList.add('animate');
            }, 100); // Small delay to ensure DOM is ready
          }
        }

        // Handle "Back to Blog" button click
        if (backToBlogBtn) {
          backToBlogBtn.addEventListener('click', (e) => {
            e.preventDefault();
            
            // Set flags for blog page to show slide animation instead of loader
            sessionStorage.setItem('alife-back-navigation', 'true');
            sessionStorage.setItem('alife-from-blog-page', 'true');
            
            // Navigate to blog page
            window.location.href = '/blog';
          });
        }
      });
    </script>
  </body>
</html>
