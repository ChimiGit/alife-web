---
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import { getBlogBySlug } from '../../utils/blog';
import { marked } from 'marked';

const urlParams = new URLSearchParams(Astro.url.search);
const lang = urlParams.get('lang') || 'en';
const translations = {
  en: {
    navigation: {
      about: 'About', career: 'Career', blog: 'Blog', support: 'Support Us'
    },
    backToBlog: 'Back to Blog',
    publishedOn: 'Published on',
    by: 'By'
  },
  jp: {
    navigation: {
      about: '概要', career: 'キャリア', blog: 'ブログ', support: 'サポート'
    },
    backToBlog: 'ブログに戻る',
    publishedOn: '公開日',
    by: '著者'
  }
};

const t = translations[lang as keyof typeof translations] || translations.en;

const { slug } = Astro.params;
const blog = getBlogBySlug(slug || '');

if (!blog) {
  return Astro.redirect('/blog');
}

// Convert markdown to HTML
const htmlContent = marked(blog.content);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{blog.title} - ALIFE Blog</title>
    <meta name="description" content={blog.description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen bg-gray-50">
    <Header lang={lang} translations={t} />

          <main class="max-w-5xl mx-auto px-4 py-12" style="font-family: 'Inter', sans-serif;">
        <div class="mb-8">
          <a href="/blog" class="inline-flex items-center text-primary hover:text-primary/80 transition-colors duration-200 mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            {t.backToBlog}
          </a>
          
          <div class="flex items-center gap-2 mb-4">
            <span class="text-sm text-gray-500 bg-primary/10 text-primary px-3 py-1 rounded-full font-medium">{blog.category}</span>
            {blog.tags && blog.tags.length > 0 && (
              <>
                <span class="text-sm text-gray-500">•</span>
                <div class="flex gap-1">
                  {blog.tags.slice(0, 3).map(tag => (
                    <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">{tag}</span>
                  ))}
                </div>
              </>
            )}
            <span class="text-sm text-gray-500">•</span>
            <span class="text-sm text-gray-500">{t.publishedOn} {new Date(blog.pubDate).toLocaleDateString()}</span>
            <span class="text-sm text-gray-500">•</span>
            <span class="text-sm text-gray-500">{t.by} {blog.author}</span>
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-primary mb-6 leading-tight" style="font-family: 'GT Alpina Fine', serif;">
            {blog.title}
          </h1>
          
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            {blog.description}
          </p>

          <!-- Featured Image -->
          <div class="mb-12">
            <img 
              src={blog.featuredImage} 
              alt={blog.title}
              class="w-full h-96 object-cover rounded-2xl shadow-lg"
            />
          </div>
        </div>

              <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-3">
            <article class="prose prose-lg max-w-none bg-white rounded-2xl shadow-sm p-8">
              <div set:html={htmlContent}></div>
            </article>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-8 space-y-6">
              <!-- Author Info -->
              <div class="bg-white rounded-xl shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'GT Alpina Fine', serif;">
                  About the Author
                </h3>
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                    <span class="text-primary font-semibold text-lg">
                      {blog.author.split(' ').map(n => n[0]).join('')}
                    </span>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900">{blog.author}</p>
                    <p class="text-sm text-gray-500">{blog.category} Expert</p>
                  </div>
                </div>
              </div>

              <!-- Article Info -->
              <div class="bg-white rounded-xl shadow-sm p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'GT Alpina Fine', serif;">
                  Article Details
                </h3>
                <div class="space-y-3 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-500">Published</span>
                    <span class="text-gray-900">{new Date(blog.pubDate).toLocaleDateString()}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-500">Category</span>
                    <span class="text-gray-900">{blog.category}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-500">Reading Time</span>
                    <span class="text-gray-900">~5 min</span>
                  </div>
                </div>
              </div>

              <!-- Tags -->
              {blog.tags && blog.tags.length > 0 && (
                <div class="bg-white rounded-xl shadow-sm p-6">
                  <h3 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: 'GT Alpina Fine', serif;">
                    Tags
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {blog.tags.map(tag => (
                      <span class="text-xs bg-gray-100 text-gray-700 px-3 py-1 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
    </main>

    <style>
      .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
        font-family: 'GT Alpina Fine', serif;
        color: #1f2937;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      
      .prose h1 {
        font-size: 2.5rem;
        font-weight: 700;
      }
      
      .prose h2 {
        font-size: 2rem;
        font-weight: 600;
      }
      
      .prose h3 {
        font-size: 1.5rem;
        font-weight: 600;
      }
      
      .prose p {
        color: #4b5563;
        line-height: 1.7;
        margin-bottom: 1.5rem;
      }
      
      .prose ul, .prose ol {
        margin-bottom: 1.5rem;
      }
      
      .prose li {
        color: #4b5563;
        margin-bottom: 0.5rem;
      }
      
      .prose code {
        background-color: #f3f4f6;
        padding: 0.2rem 0.4rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        color: #1f2937;
      }
      
      .prose pre {
        background-color: #1f2937;
        color: #f9fafb;
        padding: 1.5rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin-bottom: 1.5rem;
      }
      
      .prose pre code {
        background-color: transparent;
        padding: 0;
        color: inherit;
      }
      
      .prose blockquote {
        border-left: 4px solid #3b82f6;
        padding-left: 1.5rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #6b7280;
      }
      
      .prose a {
        color: #3b82f6;
        text-decoration: none;
      }
      
      .prose a:hover {
        text-decoration: underline;
      }
    </style>
  </body>
</html>
