---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Slider1 from '../components/home-slider/slider-1.astro';
import Slider2 from '../components/home-slider/slider-2.astro';
import Slider3 from '../components/home-slider/slider-3.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/logo/thumbnail-logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>ALIFE - Artificial Life Institute</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/gt-alpina-fine/GT-Alpina-Fine-Standard-Medium.woff2" as="font" type="font/woff2" crossorigin>
    <!-- Preload loader images for faster loading -->
    <link rel="preload" href="/assets/loader/blog-loading.png" as="image">
    <link rel="preload" href="/assets/loader/career-loading.png" as="image">
    <link rel="preload" href="/assets/loader/about-loading.png" as="image">
    <link rel="preload" href="/assets/loader/support-loading.png" as="image">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen overflow-x-hidden">
    <Header />
    <!-- Backgrounds will be shown/hidden via JavaScript -->
    <div id="gif-background" class="hidden">
      <Slider1 />
    </div>
    <div id="slider-2-background" class="hidden">
      <Slider2 />
    </div>
    <div id="slider-3-background" class="hidden"> <Slider3 /> </div>
    <script>
      // Randomly choose which background to show on page load
      const backgrounds = ['gif', 'slider-2', 'slider-3'];
      const randomBackground = backgrounds[Math.floor(Math.random() * backgrounds.length)];
      
      // Hide all backgrounds first
      const gifBackground = document.getElementById('gif-background') as HTMLElement;
      const parallelogramBackground = document.getElementById('slider-2-background') as HTMLElement;
      const slider3Background = document.getElementById('slider-3-background') as HTMLElement;
      
      gifBackground?.classList.add('hidden'); 
      parallelogramBackground?.classList.add('hidden');
      slider3Background?.classList.add('hidden');
      
      // Show the randomly chosen background
      const selectedBackground = document.getElementById(`${randomBackground}-background`) as HTMLElement;
      selectedBackground?.classList.remove('hidden');
    </script>
  </body>
</html>
