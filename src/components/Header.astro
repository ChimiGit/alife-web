---
// Header component for ALIFE website
export interface Props {
  lang?: string;
  translations?: any;
}

const { lang = 'en', translations } = Astro.props;
---

<header class="font-['Inter',-apple-system,BlinkMacSystemFont,'Segoe_UI',Roboto,sans-serif]">

  
  	<!-- Main  header content -->
	<div class="bg-white/20 backdrop-blur-md border-b border-white/30">
    <div class="max-w-6xl mx-auto px-4 flex justify-between items-center min-h-20">
      <!-- Logo section -->
      <div class="flex items-center">
        <a href="/" class="flex items-center" aria-label="ALIFE - Artificial Life Institute">
          <img src="/assets/logo/logo.png" alt="ALIFE Logo" class="h-8 w-32"/>
        </a>
      </div>
      
      <!-- Navigation section -->
      <nav class="flex items-center gap-8" role="navigation" aria-label="Main navigation">
        <ul class="flex list-none m-0 p-0 gap-8">
          <li class="m-0">
            <a href={`/about?lang=${lang}`} class="no-underline text-primary font-normal text-sm transition-colors duration-200 hover:text-accent-cyan">{translations?.navigation?.about || 'About'}</a>
          </li>
          <li class="m-0">
            <a href={`/career?lang=${lang}`} class="no-underline text-primary font-normal text-sm transition-colors duration-200 hover:text-accent-cyan">{translations?.navigation?.career || 'Career'}</a>
          </li>
          <li class="m-0">
            <a href={`/blog?lang=${lang}`} class="no-underline text-primary font-normal text-sm transition-colors duration-200 hover:text-accent-cyan">{translations?.navigation?.blog || 'Blog'}</a>
          </li>
          <li class="m-0">
            <a href={`/support?lang=${lang}`} class="no-underline text-primary font-normal text-sm transition-colors duration-200 hover:text-accent-cyan">{translations?.navigation?.support || 'Support Us'}</a>
          </li>
        </ul>
        
        <!-- Language selector -->
        <div class="flex items-center gap-2">
          <span class="w-px h-4 bg-gray-300"></span>
          <a href="?lang=en" class={`no-underline font-medium text-xs transition-colors duration-200 hover:text-accent-cyan ${lang === 'en' ? 'text-accent-cyan' : 'text-primary'}`} aria-label="English">EN</a>
          <span class="w-px h-4 bg-gray-300"></span>
          <a href="?lang=jp" class={`no-underline font-medium text-xs transition-colors duration-200 hover:text-accent-cyan ${lang === 'jp' ? 'text-accent-cyan' : 'text-primary'}`} aria-label="Japanese">JP</a>
        </div>
      </nav>
    </div>
  </div>
</header>
