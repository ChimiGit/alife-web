<div class="relative min-h-screen bg-[#FFB5A7]" style="font-family: 'Inter', sans-serif;">
  <!-- Rotating SVG Background -->
  <div class="absolute inset-0 flex justify-end items-center z-0">
    <div class="svg-container">
      <img 
        src={`${import.meta.env.BASE_URL}assets/images/Bg 2.4.svg`} 
        alt="Bg 2.4" 
      />
    </div>
  </div>

  <style>
    .svg-container {
      background-color: #FFB5A7;
      width: 50vw;
      height: 100vh;
      overflow: visible;
      /* border: 2px solid red; */
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 100;
    }
    
    .svg-container img {
      width: 800%;
      height: auto;
      display: block;
      animation: rotate 20s linear infinite;
      margin-right: -400%;
      position: relative;
      z-index: 1;
    }
    
    @keyframes rotate {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }
  </style>

  <!-- Text Content (same as other sliders) -->
