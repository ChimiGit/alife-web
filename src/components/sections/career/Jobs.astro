---
import '../../../styles/global.css';
---

<!-- Jobs Content -->
<div class="space-y-8">
  <!-- Research Head - First Instance -->
  <div class="border-b border-gray-200 pb-8">
    <div class="flex justify-between items-start mb-4">
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-primary mb-2" style="font-family: 'GT Alpina Fine', serif;">Research Head</h3>
        <p class="text-primary font-medium mb-1">Kyoto HQ, Japan</p>
        <p class="text-gray-600 text-sm">Job Description: Turning data into insights, and insights into impact.</p>
      </div>
      <div class="flex flex-col items-end space-y-2">
        <button class="bg-primary text-white px-4 py-2 rounded-full font-medium text-sm hover:bg-accent-cyan transition-colors duration-200">
          View Details
        </button>
        <div class="text-right text-sm">
          <p class="text-gray-600">Dateline: <span class="font-medium">30-Aug-2025</span></p>
          <p class="text-gray-600">Job Type: <span class="font-medium">Full Time</span></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Business Analyst - First Instance -->
  <div class="border-b border-gray-200 pb-8">
    <div class="flex justify-between items-start mb-4">
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-primary mb-2" style="font-family: 'GT Alpina Fine', serif;">Business Analyst</h3>
        <p class="text-primary font-medium mb-1">Tokyo Office, Japan</p>
        <p class="text-gray-600 text-sm">Job Description: Bridging business needs with smart solutions.</p>
      </div>
      <div class="flex flex-col items-end space-y-2">
        <button class="bg-primary text-white px-4 py-2 rounded-full font-medium text-sm hover:bg-accent-cyan transition-colors duration-200">
          View Details
        </button>
        <div class="text-right text-sm">
          <p class="text-gray-600">Dateline: <span class="font-medium">02-Sept-2025</span></p>
          <p class="text-gray-600">Job Type: <span class="font-medium">Full Time</span></p>
        </div>
      </div>
    </div>
  </div>
</div>
