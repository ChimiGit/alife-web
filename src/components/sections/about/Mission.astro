---
import '../../../styles/global.css';
import { t, type Locale } from '../../../utils/i18n.ts';

export interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
---

<!-- SVG Header -->
<div class="w-screen mb-12 flex justify-center lg:justify-start lg:-ml-[18.5rem] overflow-hidden relative" style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%);">
  <img 
    src="/assets/images/ALife Slide Template-03 1.svg" 
    alt="ALife Mission Header" 
    class="w-screen min-w-screen"
  />
  <!-- Centered Logo -->
  <div class="absolute inset-0 flex items-center justify-center">
    <img 
      src="/assets/logo/logo.svg" 
      alt="ALIFE Logo" 
      class="h-18 w-auto opacity-90"
    />
  </div>
</div>

<!-- Mission Content -->
<div class="w-screen px-8 py-16 relative" style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%);">
  <!-- Background Frame SVG -->
  <div class="absolute inset-0 bg-gray-50">
    <img 
      src="/assets/images/frame.svg" 
      alt="Decorative frame background" 
      class="w-full h-full object-contain opacity-60"
      style="filter: brightness(0.8) contrast(1.2);"
    />
  </div>
  
  <!-- Flex Container for Mission, Vision, and Values -->
  <div class="flex flex-col lg:flex-row gap-8 lg:gap-12 relative z-10">
    
    <!-- Mission Section -->
    <div class="flex-1">
      <h2 class="text-4xl lg:text-5xl text-primary mb-5 text-center" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'GT Alpina Fine', serif"};`}>{t(locale, 'about.mission')}</h2>
      <div class="h-0.5 w-50 bg-primary mb-8 mx-auto"></div>
      <p class="text-16px lg:text-16px text-primary leading-relaxed text-left" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'Inter', sans-serif"}; line-height: 2; font-weight: 300; text-align: left;`}>
        {t(locale, 'about.missionText')}
      </p>  
    </div>

    <!-- Vision Section -->
    <div class="flex-1">
      <h2 class="text-4xl lg:text-5xl text-primary mb-5 text-center" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'GT Alpina Fine', serif"};`}>{t(locale, 'about.vision')}</h2>
      <div class="h-0.5 w-50 bg-primary mb-8 mx-auto"></div>
      <p class="text-16px lg:text-16px text-primary leading-relaxed text-left" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'Inter', sans-serif"}; line-height: 2; font-weight: 300; text-align: left;`}>
        {t(locale, 'about.visionText')}
      </p>
    </div>

    <!-- Values Section -->
    <div class="flex-1">
      <h2 class="text-4xl lg:text-5xl text-primary mb-5 text-center" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'GT Alpina Fine', serif"};`}>{t(locale, 'about.values')}</h2>
      <div class="h-0.5 w-50 bg-primary mb-8 mx-auto"></div>
      <div class="space-y-6">
        <p class="text-16px text-primary leading-relaxed mb-4 text-left" style={`font-family: ${locale === 'ja' ? "'Noto Sans JP', sans-serif" : "'Inter', sans-serif"}; font-weight: 300; text-align: left;`}>
          {t(locale, 'about.valuesText')}
        </p>
      </div>
    </div>

  </div>
</div>
