---
import '../../../styles/global.css';
import { loadMarkdownTranslations } from '../../../utils/markdown-translations.ts';

export interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const translations = await loadMarkdownTranslations(lang);
---

<!-- History Content -->
<div class="max-w-4xl mx-auto px-4 pb-12">
  <h2 class="text-5xl text-primary text-center mb-2" style="font-family: 'GT Alpina Fine', serif;">{translations.History || 'History'}</h2>
  <div class="text-center mb-15">
    <span class="text-20px text-primary">{translations['Why Us ? We are already well positioned to succeed.'] || 'Why Us ? We are already well positioned to succeed.'}</span>
  </div>

  <!-- Timeline -->
  <div class="relative max-w-4xl mx-auto">
    <!-- Timeline Line -->
    <div class="absolute left-1/2 top-0 bottom-0 w-px bg-gray-200 transform -translate-x-1/2"></div>
    <!-- Item -->
    <div class="flex items-center mb-8">
      <!-- Left Content -->
      <div class="w-1/2 pr-8 text-end">
        <span class="text-3xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations['Sakana.ai'] || 'Sakana.ai'}</span>
        <br/>
        <span class="inline-flex items-center gap-x-1.5 py-1 px-5 rounded-full text-xs bg-primary text-white">Jan, 2024</span>
        <br/>
        <span class="text-xs text-primary mt-2 block">{translations['1st Japanese company with a focus on ALife. $30M seed round Jan, 2024.'] || '1st Japanese company with a focus on ALife. $30M seed round Jan, 2024.'}</span>
      </div>
      <!-- End Left Content -->

      <!-- Icon -->
      <div class="relative z-10 size-7 flex justify-center items-center">
        <div class="size-2 rounded-full bg-primary"></div>
      </div>
      <!-- End Icon -->

      <!-- Right Content -->
      <div class="w-1/2 pl-8">
        <img src="/assets/images/We-raised-30M 1.png" alt="Sakana.ai Logo" class="h-25 w-50 mt-5"/>
      </div>
      <!-- End Right Content -->
    </div>
    <!-- End Item -->

    <!-- Item -->
    <div class="flex items-center mb-8">
      <!-- Left Content -->
      <div class="w-1/2 pr-8 flex justify-end">
        <img src="/assets/logo/logo2.png" alt="ALIFE Logo" class="h-15 w-30 mt-5 filter-primary"/>
      </div>
      <!-- End Left Content -->

      <!-- Icon -->
      <div class="relative z-10 size-7 flex justify-center items-center">
        <div class="size-2 rounded-full bg-primary"></div>
      </div>
      <!-- End Icon -->

      <!-- Right Content -->
      <div class="w-1/2 pl-8">
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations.Alife || 'Alife'}</span>
        <br/>
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations['Institute Incorporated'] || 'Institute Incorporated'}</span>
      </div>
      <!-- End Right Content -->
    </div>
    <!-- End Item -->

    <!-- Item -->
    <div class="flex items-center mb-8">
      <!-- Left Content -->
      <div class="w-1/2 pr-8 text-end">
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations.Research || 'Research'}</span>
        <br/>
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations['Projects Began'] || 'Projects Began'}</span>
        <br/>
        <span class="inline-flex items-center gap-x-1.5 py-1 px-5 rounded-full text-xs bg-primary text-white">Dec, 2024</span>
      </div>
      <!-- End Left Content -->

      <!-- Icon -->
      <div class="relative z-10 size-7 flex justify-center items-center">
        <div class="size-2 rounded-full bg-primary"></div>
      </div>
      <!-- End Icon -->

      <!-- Right Content -->
      <div class="w-1/2 pl-8">
        <!-- ALife Research Grid -->
        <div class="grid grid-cols-2 gap-4 max-w-md">
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations['primordial soup'] || 'primordial soup'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Primordial Soup" class="w-full h-24 object-cover"/>
            </div>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations.structure || 'structure'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Structure" class="w-full h-24 object-cover"/>
            </div>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations.locomotion || 'locomotion'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Locomotion" class="w-full h-24 object-cover"/>
            </div>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations.coevolution || 'coevolution'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Coevolution" class="w-full h-24 object-cover"/>
            </div>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations.complexification || 'complexification'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Complexification" class="w-full h-24 object-cover"/>
            </div>
          </div>
          <div class="text-center">
            <p class="text-sm font-medium text-orange-400 mb-2">{translations['disordered structures'] || 'disordered structures'}</p>
            <div class="border-2 border-orange-400 rounded-lg overflow-hidden">
              <img src="/assets/images/primordial soup.png" alt="Disordered Structures" class="w-full h-24 object-cover"/>
            </div>
          </div>
        </div>
      </div>
      <!-- End Right Content -->
    </div>
    <!-- End Item -->

    <!-- Future Items -->
    <div class="flex items-center mb-8">
      <!-- Left Content -->
      <div class="w-1/2 pr-8 text-end">
        <span class="text-xl text-primary">{translations.Now || 'Now'}</span>
      </div>
      <!-- End Left Content -->

      <!-- Icon -->
      <div class="relative z-10 size-7 flex justify-center items-center">
        <div class="size-2 rounded-full bg-primary"></div>
      </div>
      <!-- End Icon -->

      <!-- Right Content -->
      <div class="w-1/2 pl-8">
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations.Kyoto || 'Kyoto'}</span>
        <br/>
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations['Office Opens'] || 'Office Opens'}</span>
        <br/>
        <span class="inline-flex items-center gap-x-1.5 py-1 px-5 rounded-full text-xs bg-primary text-white">Oct, 2025</span>
      </div>
      <!-- End Right Content -->
    </div>
    <!-- End Item -->

    <!-- Final Item -->
    <div class="flex items-center mb-8">
      <!-- Left Content -->
      <div class="w-1/2 pr-8 text-end">
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations['Non-Profit'] || 'Non-Profit'}</span>
        <br/>
        <span class="text-2xl text-primary" style="font-family: 'GT Alpina Fine', serif;">{translations.Incorporation || 'Incorporation'}</span>
        <br/>
        <span class="inline-flex items-center gap-x-1.5 py-1 px-5 rounded-full text-xs bg-primary text-white">Dec, 2025</span>
      </div>
      <!-- End Left Content -->

      <!-- Icon -->
      <div class="relative z-10 size-7 flex justify-center items-center">
        <div class="size-2 rounded-full bg-primary"></div>
      </div>
      <!-- End Icon -->

      <!-- Right Content -->
      <div class="w-1/2 pl-8">
        <!-- Empty for clean layout -->
      </div>
      <!-- End Right Content -->
    </div>
    <!-- End Item -->
  </div>
  <!-- End Timeline -->
</div>
